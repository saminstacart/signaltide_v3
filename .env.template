# Environment Variables for SignalTide v3
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================================================
# Exchange API Configuration
# ============================================================================

# Exchange to use (binance, coinbase, kraken, etc.)
DEFAULT_EXCHANGE=binance

# API credentials (required for live trading and real-time data)
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_API_SECRET=your_api_secret_here

# Optional: Exchange-specific settings
# EXCHANGE_PASSWORD=  # Some exchanges (Coinbase) require this
# EXCHANGE_UID=  # Some exchanges (OKX) require this

# ============================================================================
# Trading Configuration
# ============================================================================

# Default trading pair
DEFAULT_SYMBOL=BTC/USDT

# Default timeframe (1m, 5m, 15m, 1h, 4h, 1d, 1w)
DEFAULT_TIMEFRAME=1h

# Initial capital (USD)
INITIAL_CAPITAL=50000

# ============================================================================
# Optimization Configuration
# ============================================================================

# Number of Optuna trials
OPTUNA_N_TRIALS=100

# Number of parallel jobs (-1 = use all CPU cores)
OPTUNA_N_JOBS=-1

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# Testing Configuration
# ============================================================================

# Set to "true" to enable test mode (smaller datasets, fewer trials)
TEST_MODE=false

# ============================================================================
# Advanced Settings (Optional)
# ============================================================================

# Database connection (default is SQLite, can use PostgreSQL for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/signaltide

# Cache directory
# CACHE_DIR=/path/to/cache

# Maximum cache size (MB)
# CACHE_SIZE_MB=500

# Enable/disable features
# ENABLE_REGIME_DETECTION=true
# ENABLE_ML_SIGNALS=true
# ENABLE_REAL_TIME_DATA=false
# ENABLE_LIVE_TRADING=false
